<UserControl x:Class="WPF_LoginForm.Views.HomeView_bh"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.Views" xmlns:customerControl="clr-namespace:WPF_LoginForm.CustomControls" xmlns:viewModel="clr-namespace:WPF_LoginForm.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:HomeViewModel_bh/>
    </UserControl.DataContext>
    
    <Grid>
       
        <ScrollViewer  
                      HorizontalScrollBarVisibility="Disabled">
            <customerControl:IndivItems x:Name="IndivItems">
                <ItemsControl
                ItemsSource="{Binding data_bh }"
                Margin="0,20,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <customerControl:IndivItems/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </customerControl:IndivItems>
            
            <!--<ItemsControl
                ItemsSource="{Binding data_bh }"
                Margin="0,20,0,0">
                
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <customerControl:IndivItems/>
                <customerControl:IndivItems/>
                <customerControl:IndivItems/>
                <customerControl:IndivItems/> 
            </ItemsControl>-->
            
        </ScrollViewer>

    </Grid>
</UserControl>
