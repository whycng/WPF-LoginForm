                                        RelativeSource={RelativeSource 
                                        Mode=FindAncestor,
                                        AncestorType=ItemsControl}}"
                                            >
                                        <TextBlock Text="加入购物车"/>
                                    </Button>-->

                                    <Button Width="80" Height="20" Command="{Binding DataContext.BuyCommand,
                                        RelativeSource={RelativeSource 
                                        Mode=FindAncestor,
                                        AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id}">Button1</Button>

                                </StackPanel>
                                
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </customerControl:IndivItems>
 
        </ScrollViewer>

